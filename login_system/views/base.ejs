<%-include('header')-%>
<div class="text-center center-div" id="login">
  <div class="container w-50 border py-5">
    <div class="title pb-5">
      <h2 class="font-weight-bold">Login System</h2>
      <span>Login for the existing user</span>
      <% if(locals.logout) { %>
      <div class="alert alert-success text-center"><%=logout %></div>
      <%} %>
    </div>
    <form action="/route/login" method="POST">
      <div class="form-group mb-4">
        <input
          type="text"
          class="form-control"
          placeholder="email"
          name="email"
        />
        <small class="form-text text-muted text-left"
          >Register email address</small
        >
      </div>
      <div class="form-group mb-2">
        <input
          type="password"
          class="form-control"
          placeholder="password"
          name="password"
        />
      </div>
      <button type="submit" class="btn btn-success mt-1">Submit</button>
    </form>
  </div>
</div>
<%-include('footer')-%>
